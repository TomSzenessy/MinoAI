{
  "name": "mino",
  "private": true,
  "description": "Mino â€” Your Mind, Organized. An agent-first, markdown-based knowledge platform.",
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "web:dev": "pnpm --filter @mino-ink/web dev",
    "web:build": "pnpm --filter @mino-ink/web build",
    "web:test": "pnpm --filter @mino-ink/web test",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write .",
    "docker:build": "docker build -f docker/Dockerfile -t mino-server .",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down"
  },
  "devDependencies": {
    "prettier": "^3.5.0",
    "turbo": "^2.4.0",
    "typescript": "^5.7.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
